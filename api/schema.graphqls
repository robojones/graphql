type Query {
	user: User!
}

type Mutation {
	signup(email: String!, name: String!, password: String!): LoginResult!
	login(email: String!, password: String!): LoginResult!
	logout: LogoutResult!
}

type User {
	id: ID!
	email: String!

	name: String!
	createdAt: String!
	updatedAt: String!
}

type Session {
	id: ID!
	token: String!
}

type LoginResult {
	session: Session!
	user: User!
}

type LogoutResult {
	user: User!
}

